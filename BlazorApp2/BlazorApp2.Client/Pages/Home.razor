@page "/"
@using Microsoft.AspNetCore.Components
@inject NavigationManager Navigation

<PageTitle>Red Vial Inteligente</PageTitle>

<div class="presentation-container">

    <div class="header-section animate_animated animate_fadeIn">
        <h1 class="title">🚦 Red Vial Inteligente</h1>
        <h2 class="subtitle">Sistema de Análisis y Simulación de Tráfico en Tiempo Real</h2>
    </div>

    <div class="tech-section animate_animated animatefadeIn animate_delay-1s">
        <h3 class="section-title">🛠 Tecnologías</h3>
        <div class="tech-grid">
            <div class="tech-item"><span class="check">✔</span> Blazor WebAssembly</div>
            <div class="tech-item"><span class="check">✔</span> ASP.NET Core</div>
            <div class="tech-item"><span class="check">✔</span> Entity Framework Core</div>
            <div class="tech-item"><span class="check">✔</span> JavaScript Interop</div>
            <div class="tech-item"><span class="check">✔</span> Generación de PDFs</div>
        </div>
    </div>

    <div class="objective-section animate_animated animatefadeIn animate_delay-2s">
        <h3 class="section-title">🎯 Objetivo</h3>
        <p>Desarrollar una solución <strong>innovadora</strong> para monitorear, analizar y optimizar el flujo vehicular en cruces semafóricos, identificando:</p>
        <ul class="feature-list">
            <li>✅ Intersecciones congestionadas</li>
            <li>✅ Cuellos de botella</li>
            <li>✅ Patrones de tráfico</li>
            <li>✅ Eficiencia de semáforos</li>
        </ul>
    </div>


    <div class="features-section">
        <h3 class="section-title">🔥 Características Destacadas</h3>

        <div class="feature-card animate_animated animate_fadeInLeft">
            <h4>📊 Dashboard Interactivo</h4>
            <ul>
                <li>Filtros avanzados por <strong>Nodo ID</strong>, <strong>Dirección</strong> (Vertical/Horizontal) y <strong>Tipo de Análisis</strong></li>
                <li>Tablas dinámicas con paginación</li>
                <li>Exportación a PDF con un solo clic</li>
            </ul>
        </div>

        <div class="feature-card animate_animated animate_fadeInRight">
            <h4>🔄 Simulación en Tiempo Real</h4>
            <ul>
                <li>Modelado de cambios de semáforos</li>
                <li>Cálculo de vehículos esperados, tiempos de cruce y congestión</li>
                <li>Integración con APIs para procesamiento de datos</li>
            </ul>
        </div>

        <div class="feature-card animate_animated animate_fadeInLeft">
            <h4>🗺️ Visualización de Red Vial</h4>
            <ul>
                <li>Mapa interactivo dibujado en Canvas</li>
                <li>Nodos y conexiones entre calles</li>
                <li>Semaforización inteligente con lógica de estados (Verde/Rojo)</li>
            </ul>
        </div>

        <div class="feature-card animate_animated animate_fadeInRight">
            <h4>📈 Análisis Especializados</h4>
            <div class="analysis-types">
                <div>
                    <h5>Datos Detallados por Semáforo</h5>
                    <ul>
                        <li>Promedio de vehículos por cambio</li>
                        <li>Tiempo de espera estimado</li>
                    </ul>
                </div>
                <div>
                    <h5>Intersecciones con Mayor Congestión</h5>
                    <ul>
                        <li>Indicadores de saturación</li>
                    </ul>
                </div>
                <div>
                    <h5>Detección de Cuellos de Botella</h5>
                    <ul>
                        <li>Puntos críticos en la red vial</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="action-section animate_animated animatefadeInUp animate_delay-3s">
        <button class="action-btn" @onclick="NavigateToDemo">
            🚀 Ver Demostración
        </button>
    </div>
</div>

@code {
    private void NavigateToDemo()
    {
        Navigation.NavigateTo("/RedVial");
    }
}

